<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Planora.ViewModels.ViewModels"
             x:Class="Planora.Views.ProfileView"
             x:DataType="vm:ProfileViewModel">
    <StackPanel Margin="30" Spacing="15">
        <TextBlock Text="Мій профіль" FontSize="24" FontWeight="Bold"/>
        
        <Border Background="White" CornerRadius="8" Padding="20">
            <StackPanel Spacing="10">
                <TextBlock Text="{Binding FullName}" FontSize="18" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding Group}" Foreground="Gray"/>
                <TextBlock Text="{Binding Email}" Foreground="Blue"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>