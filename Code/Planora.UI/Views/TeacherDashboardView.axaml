<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Planora.ViewModels.ViewModels"
             x:Class="Planora.Views.TeacherDashboardView"
             x:DataType="vm:TeacherDashboardViewModel">

    <Grid ColumnDefinitions="250, *" Background="#F3F4F6">
        
        <!-- 햍핹뉋 햃햏햇햍햛 -->
        <Border Grid.Column="0" Background="White" BoxShadow="2 0 10 0 #10000000" ZIndex="1">
            <Grid RowDefinitions="Auto, *, Auto">
                
                <!-- 햍쮏쮐햦 -->
                <StackPanel Grid.Row="0" Margin="20">
                    <TextBlock Text="Planora" FontSize="24" FontWeight="Bold" Foreground="#4F46E5"/>
                    <TextBlock Text="Teacher Panel" FontSize="12" Foreground="Gray"/>
                </StackPanel>

                <!-- 햎햣햫혩 -->
                <StackPanel Grid.Row="1" Spacing="5" Margin="10">
                    <Button Command="{Binding NavigateCommand}" CommandParameter="Schedule"
                            Content="游늰  햎혰햧 쮏햨햩햟햢" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Background="Transparent" BorderThickness="0"/>
                    
                    <Button Command="{Binding NavigateCommand}" CommandParameter="Classrooms"
                            Content="游댌  쮐걤햨 햟혞햢햦혝쮐혰햧" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Background="Transparent" BorderThickness="0"/>
                    
                    <Button Command="{Binding NavigateCommand}" CommandParameter="Profile"
                            Content="游녻  쮐혰햩혧" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Background="Transparent" BorderThickness="0"/>
                </StackPanel>

                <!-- 핹햫혟 향햫햦향혞 -->
                <Border Grid.Row="2" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="{Binding UserName}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding UserRole}" FontSize="12" Foreground="Gray"/>
                        <Button Content="뉋쟳좜햦" Command="{Binding LogoutCommand}" 
                                Margin="0,10,0,0" Background="#FEE2E2" Foreground="#DC2626"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 먫냻뉋 햃햏햇햍햛 -->
        <Grid Grid.Column="1" RowDefinitions="Auto, *">
            <Border Grid.Row="0" Background="White" Height="60" Padding="20,0">
                <TextBlock Text="햟햫햣햩혧 쒫쟳쥃햟햢햟혢햟" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
            </Border>

            <TransitioningContentControl Grid.Row="1" Content="{Binding CurrentPage}" Padding="20"/>
        </Grid>
    </Grid>
</UserControl>